{
    "app-id": "com.inklestudios.Inky",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.mono6"
    ],
    "command": "inky",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--device=dri",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "mono6",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/mono6/install.sh"
            ]
        },
        {
            "name": "inky",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/inky",
                "mv -t /app/inky *"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/inkle/inky/releases/download/0.13.0/Inky_linux.zip",
                    "sha256": "dafb15d169f7a812974aefe043f219eca45ee23e47880e98493334ca111581af",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "patch",
                    "path": "inklecate_linux.patch"
                }
            ]
        },
        {
            "name": "wrapper",
            "buildsystem": "simple",
            "build-commands": [
                "install inky-wrapper.sh /app/bin/inky",
                "install -Dm644 com.inklestudios.Inky.metainfo.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml",
                "install -Dm644 inky.png ${FLATPAK_DEST}/share/icons/hicolor/512x512/apps/${FLATPAK_ID}.png",
                "install -Dm644 com.inklestudios.Inky.desktop ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "inky-wrapper.sh",
                    "commands": [
                        "exec /app/inky/Inky \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "com.inklestudios.Inky.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "inky.png"
                },
                {
                    "type": "file",
                    "path": "com.inklestudios.Inky.desktop"
                }
            ]
        }

    ]
}
